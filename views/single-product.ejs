        <div class="related-product-area pb-95">
            <div class="container">
                <div class="section-title text-center mb-50">
                    <h2>Related products</h2>
                </div>
                <div class="related-product-active owl-carousel owl-dot-none">

                    <% if (relatedProducts && relatedProducts.length> 0) { %>
                    <% relatedProducts.forEach(rp=> { %>
                    <div class="product-wrap">
                        <div class="product-img">
                            <a href="/product/<%= rp.productCode %>">
                                <img class="default-img" src="<%= rp.image %>"
                                    alt="<%= rp.productName %>">
                                <img class="hover-img" src="<%= rp.image %>"
                                    alt="<%= rp.productName %>">
                            </a>
                            <div class="product-action">
                                <div class="pro-same-action pro-wishlist">
                                    <a title="Wishlist"
                                        href="/api/product/download/<%= rp.productCode %>"><i
                                            class="pe-7s-download"></i> </a>
                                </div>
                                <div class="pro-same-action pro-cart">
                                    <a
                                        title="`<%= rp.productType %>-<%= rp.productName %>-<%= rp.category %>-<%=
                                                rp.texture %>`"
                                        href="/api/product/detail/<%= rp.productCode %>">
                                        View
                                        product</a>
                                </div>
                                <div class="pro-same-action pro-quickview">
                                    <a title="Quick View" href="#"
                                        data-bs-toggle="modal"
                                        data-bs-target="#exampleModal"
                                        data-productType="<%= rp.productType %>"
                                        data-name="<%= rp.productName %>"
                                        data-image="<%= rp.image %>"
                                        data-category="<%= rp.category %>"
                                        data-subcategory="<%= rp.subCategory %>"
                                        data-texture="<%= rp.texture %>"
                                        data-design="<%= rp.designName %>"
                                        data-size="<%= rp.size %>"
                                        data-thickness="<%= rp.thickness %>"
                                        data-width="<%= rp.width %>">
                                        <i class="pe-7s-look"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="product-content text-center">
                            <h3><a href="/product/<%= rp.productCode %>">
                                    <%= rp.productType %>-<%= rp.productName
                                    %>-<%= rp.category %>-<%=
                                    rp.texture %>
                                </a></h3>
                        </div>
                    </div>
                    <% }) %>
                    <% } %>

                </div>
            </div>
        </div>

