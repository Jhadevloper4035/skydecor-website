                                    <div class="pro-details-meta">
                                        <span>Design :</span>
                                        <ul>
                                            <li><span
                                                    id="modalDesign">-</span></li>
                                        </ul>
                                    </div>

                                    

                                    <!-- Size -->
                                    <div class="pro-details-meta">
                                        <span>Size :</span>
                                        <ul>
                                            <li><span
                                                    id="modalSize">-</span></li>
                                        </ul>
                                    </div>

                                    <!-- Thickness -->
