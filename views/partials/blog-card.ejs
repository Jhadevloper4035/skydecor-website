<% blogs.forEach(blog => { %>
<div class="col-lg-4 col-md-6 col-sm-12 wow animate__animated animate__fadeInUp scroll-zoom" data-wow-delay="0.2s">
    <div class="blog-wrap-2 mb-30">
        <div class="blog-img-2">
            <a href="/blog/<%= blog.url %>">
                <img src="<%= blog.image %>" alt="<%= blog.title %>">
            </a>
        </div>
        <div class="blog-content-2">
            <div class="blog-meta-2">
                <ul>
                    <li>
                      <%= new Date(blog.created_at).toLocaleDateString('en-US', { 
                          day: 'numeric', month: 'long', year: 'numeric' 
                      }) %>
                    </li>
                    <li><a href="#">4 <i class="fa fa-comments-o"></i></a></li>
                </ul>
            </div>
            <h4><a href="/blogs/<%= blog.url %>"><%= blog.title %></a></h4>
            <p><%= blog.text.replace(/<[^>]*>/g, '').substring(0, 100) %>...</p>
            <div class="blog-share-comment">
                <div class="blog-btn-2">
                    <a href="/blogs/<%= blog.url %>">read more</a>
                </div>
            </div>
        </div>
    </div>
</div>
<% }) %>
